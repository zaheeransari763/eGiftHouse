<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/computer_lab">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgradient" />

    <TextView
        android:id="@+id/nav_user_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_header_profile"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/proza_libre"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:text="User Name"
        android:textColor="#FDFCFC"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nav_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_user_full_name"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/proza_libre"
        android:gravity="center"
        android:text="Email"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:textColor="#FDFCFC"
        android:textSize="18sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/default_avatar">

    </de.hdodenhof.circleimageview.CircleImageView>

</RelativeLayout>