<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    app:cardElevation="25dp"
    app:cardCornerRadius="25sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/order_username_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:textAllCaps="true"
            android:layout_marginTop="8dp"/>

        <!--<ImageView
            android:id="@+id/product_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name_layout"
            android:layout_marginTop="2dp"/>-->

        <LinearLayout
            android:id="@+id/priceLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:layout_marginStart="5dp"
            android:layout_below="@id/order_username_layout">

            <TextView
                android:id="@+id/product_price_layoutone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price :- "
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/edit_text_txt"/>

            <TextView
                android:id="@+id/order_price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="  "
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/edit_text_txt" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/product_price_layouttwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=" Rs."
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/edit_text_txt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quantityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:layout_marginStart="5dp"
            android:layout_below="@id/priceLinearLayout">

            <TextView
                android:id="@+id/product_qty_layoutone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone no. :- "
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/edit_text_txt" />

            <TextView
                android:id="@+id/order_phone_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="  "
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/edit_text_txt" />

        </LinearLayout>

        <TextView
            android:id="@+id/order_address_city_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address, City"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_below="@id/quantityLayout"
            android:textColor="@color/edit_text_txt"/>

        <TextView
            android:id="@+id/order_date_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date, Time"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_below="@id/order_address_city_layout"
            android:textColor="@color/edit_text_txt"/>

        <Button
            android:id="@+id/show_all_product"
            style="@style/SolidButtonStyle"
            android:layout_below="@id/order_date_time_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="15sp"
            android:text="Show This Order product" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>