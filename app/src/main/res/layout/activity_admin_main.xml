<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMainActivity">

    <TextView
        android:id="@+id/logoutAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="145dp"
        android:onClick="LOGOUT"
        android:text="LOGOUT"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/orange"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/headingCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/croissant_one"
        android:gravity="center"
        android:padding="2dp"
        android:text="Select category to Add Product"
        android:textSize="22sp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:layout_below="@id/logoutAdmin"/>

    <LinearLayout
        android:id="@+id/linear1_category"
        android:layout_below="@id/headingCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginEnd="45dp">

            <ImageView
                android:id="@+id/teddy"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/teddy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bitter"
                android:text="Teddy Bear"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginStart="30dp">

            <ImageView
                android:id="@+id/photoframe"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/photframe"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo Frame"
                android:textStyle="bold"
                android:fontFamily="@font/bitter"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2_category"
        android:layout_below="@id/linear1_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginEnd="45dp">

            <ImageView
                android:id="@+id/watches"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/watch"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watches"
                android:textStyle="bold"
                android:fontFamily="@font/bitter"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginStart="30dp">

            <ImageView
                android:id="@+id/videogames"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/videogames"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Games"
                android:textStyle="bold"
                android:fontFamily="@font/bitter"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category"
        android:layout_below="@id/linear2_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginEnd="45dp">

            <ImageView
                android:id="@+id/rccar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/teddy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RC Car"
                android:textStyle="bold"
                android:fontFamily="@font/bitter"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginStart="30dp">

            <ImageView
                android:id="@+id/coffeemug"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/watch"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee Mug"
                android:textStyle="bold"
                android:fontFamily="@font/bitter"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear4_category"
        android:layout_below="@id/linear3_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">

            <ImageView
                android:id="@+id/toys"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/videogames"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toys"
                android:textStyle="bold"
                android:fontFamily="@font/bitter"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/checkOrders"
        style="@style/SolidButtonStyle"
        android:layout_below="@id/linear4_category"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="C h e c k   N e w   O r d e r"
        android:paddingStart="15dp"
        android:paddingEnd="15dp" />

</RelativeLayout>