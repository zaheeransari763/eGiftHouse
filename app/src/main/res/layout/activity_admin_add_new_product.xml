<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddNewProductActivity"
    android:background="#F1ECEC">

    <ImageView
        android:id="@+id/select_product_image"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/imageplaceholder" />

    <EditText
        android:id="@+id/product_name"
        style="@style/EditTextStyle"
        android:layout_below="@id/select_product_image"
        android:layout_marginTop="16dp"
        android:hint="Product Name!"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"/>

    <EditText
        android:id="@+id/product_discription"
        style="@style/EditTextStyle"
        android:layout_below="@id/product_name"
        android:layout_marginTop="16dp"
        android:hint="Product Description!"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"/>

    <EditText
        android:id="@+id/product_cost"
        style="@style/EditTextStyle"
        android:layout_below="@id/product_discription"
        android:layout_marginTop="16dp"
        android:hint="Product Cost!"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"/>

    <EditText
        android:id="@+id/product_discount"
        style="@style/EditTextStyle"
        android:layout_below="@id/product_cost"
        android:layout_marginTop="16dp"
        android:hint="Product Discount!(if available)"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"/>

    <Button
        android:id="@+id/addProductPhoneButton"
        style="@style/SolidButtonStyle"
        android:layout_below="@+id/product_discount"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="A D D   P R O D U C T"/>

</RelativeLayout>